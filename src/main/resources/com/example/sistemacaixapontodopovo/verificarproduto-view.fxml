<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.sistemacaixapontodopovo.VerificarProdutoController">

    <Label>Verificador de preço</Label>
    <HBox>
        <VBox>
            <Label styleClass="verificadordepreco-titulo">Código do produto</Label>
            <TextField fx:id="textFieldVerificador" maxWidth="50" onKeyTyped="#onTextFieldVerificadorKeyTyped"/>
        </VBox>
        <VBox>
            <Label styleClass="verificadordepreco-titulo">Nome do produto</Label>
            <ComboBox fx:id="comboBoxVerificador" prefWidth="300"/>
        </VBox>
    </HBox>
    <Label styleClass="verificadordepreco-titulo">Descrição</Label>
    <Label fx:id="labelDescricaoVerificador" styleClass="verificadordepreco-descricao"/>
    <HBox>
        <VBox>
            <Label styleClass="verificadordepreco-titulo">Valor</Label>
            <Label fx:id="labelValorVerificador" styleClass="verificadordepreco-descricao"/>
        </VBox>
        <VBox>
            <Label styleClass="verificadordepreco-titulo">Unit</Label>
            <Label fx:id="labelUnitVerificador" styleClass="verificadordepreco-descricao"/>
        </VBox>
    </HBox>
</VBox>
